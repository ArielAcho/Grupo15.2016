{% extends 'frontendlayout.html.twig' %}
{% block content %}
	<section class="row-fluid">
	    <section class="col-lg-offset-3 col-lg-6">
	    	<form id="formEnvio" name="registrarse" class="form-horizontal" action="?action=ejecutarRegistrar" method="post">
			    <legend>Registrate</legend>  		
			    <div class="form-group formEnvio"> <!-- Ingresa ingresa e-mail-->
			        <label class="control-label col-lg-4">Email:</label>
			        <div class="col-lg-8">
			            <input type="text" class="btn btn-default" name="email" placeholder="Email">
			        </div>
			    </div>
			    <div class="form-group formEnvio"> <!-- Ingresa Password-->
			        <label class="control-label col-lg-4">Password:</label>
			        <div class="col-lg-8">
			            <input type="password" class="btn btn-default" name="clave" placeholder="Password">
			        </div>
			    </div>
			    <div class="form-group formEnvio"> <!-- Conf el Ingresar password-->
			        <label class="control-label col-lg-4">Confirmar Password:</label>
			        <div class="col-lg-8">
			            <input type="password" class="btn btn-default" name="segclave" placeholder="Confirmar Password">
			        </div>
			    </div>
			    <div class="form-group formEnvio"> <!-- Ingresa nombre-->
			        <label class="control-label col-lg-4">Nombre:</label>
			        <div class="col-lg-8">
			            <input type="text" class="btn btn-default" name= "nom" placeholder="Nombre">
			        </div>
			    </div>
			    <div class="form-group formEnvio"> <!-- Ingresa apellido-->
			        <label class="control-label col-lg-4">Apellido:</label>
			        <div class="col-lg-8">
			            <input type="text" class="btn btn-default" name="ape" placeholder="Apellido">
			        </div>
			    </div>
			    <div class="form-group formEnvio"> <!-- Ingresa Fec de Nac-->
			        <label class="control-label col-lg-4">Fecha Nacimiento:</label>
			        <div class="col-lg-4">
			            <input type="date" placeholder="dd/mm/aaaa" class="btn btn-default" clase="cumpleanios" name="fecha" step="1" min="1900-01-01" max="1998-12-31">
			        </div>
			    </div>
			    <div class="form-group formEnvio">
			        <div class="col-lg-offset-4 col-lg-8">
			            <input type="submit" class="btn btn-primary" value="Enviar"> <!-- Envia el Formulario con los datos ingresados-->
			            <input type="reset" class="btn btn-primary" value="Limpiar"> <!-- Resetea el Formulario -->
			        </div>
			    </div>
			</form>
	    </section> 
	</section>
{% endblock %}