{% extends 'backendlayout.html.twig' %}
{% block content %}
	<section class="row-fluid" id="central"></style>
		<div class="col-lg-3">
			<div class="panel panel-info" id="busqueda">
				<div class="panel-heading">
					<h3 class="panel-title">Busqueda</h3>
				</div>
				<div class="panel-body">
					<form id="busqueda" class="form-horizontal" action="?action=busqueda" method="post">
					    <div class="form-group formEnvio">
					        <label class="control-label col-lg-4">Criterio</label>
					        <div class="col-lg-12">
					            <input type="text" name="criterio" placeholder="Criterio" required>
					        </div>
					    </div>
					    <div class="form-group formEnvio">
					        <label class="control-label col-lg-6">Fecha Desde</label>
					        <div class="col-lg-12">
					            <input type="date" name="hasta" step="1" min="1900-01-01" max="1998-12-31" required>
					        </div>
					    </div>
					    <div class="form-group formEnvio">
					        <label class="control-label col-lg-6">Fecha Hasta</label>
					        <div class="col-lg-12">
					            <input type="date" name="desde" step="1" min="1900-01-01" max="1998-12-31" required>
					        </div>
					    </div>
					    <div class="form-group formEnvio">
					        <div class="col-lg-12">
					            <input type="submit" class="btn btn-primary" value="Enviar"> <!-- Envia el Formulario con los datos ingresados-->
					            <input type="reset" class="btn btn-primary" value="Limpiar"> <!-- Resetea el Formulario -->
					        </div>
					    </div>
					</form>
				</div>
			</div>
		</div>
	    <div class= "col-lg-9">
	    	<div class="text-center">
				{% for publ in args %}
					<div class='row-fluid'>
						<div class='col-lg-4'>
							<div class='thumbnail'>
							<a href="?action=verpublicacion&id={{publ.id}}"><img src='bs/img/{{publ.imagen}}'  style='width: 200px; height: 150px;'></a>
							<div class='caption'>
								<h4 ALIGN=center>{{publ.titulo}}</h4>
								<p ALIGN=left><b>Descripcion: </b>{{publ.descripcion}}</p>
								<p ALIGN=left><b>Fecha: </b>{{publ.fecha}}</p>
								<p ALIGN=left><b>Tipo Hospedaje: </b>{{publ.idtipohosp}}</p>
							</div>
						</div>
					</div>
			    {% endfor %}
			</div>
		</div>										
	</section>
{% endblock %}